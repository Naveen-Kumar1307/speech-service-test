<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
    </sectionGroup>
    <section name="log4net"
        type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <!-- This section contains a NHibernate session factory configuration -->
  <appSettings>
    <add key="NHibernate.ShowSQL" value="false" />
    <add key="NHibernate.ModelDebug" value="false" />
    <add key="NHibernate.Models" value="GlobalEnglish.Utility.Hibernate.Tests" />
    <add key="NHibernate.Substitutions" value="true=1;false=0" />
    <add key="NHibernate.Dialect" value="NHibernate.Dialect.SQLiteDialect" />
    <add key="NHibernate.ConnectionDriver" value="NHibernate.Driver.SQLite20Driver" />
    <add key="NHibernate.ConnectionString"
         value="Data Source=SampleDatabase; Version=3; New=True;" />
  </appSettings>

  <common>
    <logging>
      <factoryAdapter
        type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <!-- This section contains the log4net configuration settings -->
  <log4net>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="GlobalEnglish" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-5p %c %m%n" />
      </layout>
    </appender>

    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>
</configuration>