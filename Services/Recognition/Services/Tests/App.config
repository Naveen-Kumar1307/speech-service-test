<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core" />
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
    </sectionGroup>
    <section name="log4net"
        type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <appSettings>
    <add key="ServiceLaunchedRecognizer" value="false"/>
    <add key="AudioConverterProcess" value="/TestBin/ffmpeg.exe"/>
    <add key="EnableExclusion" value="false"/>
    <add key="EnableEndpoints" value="false" />
    <add key="RecycleAudioGarbage" value="true" />
    <add key="RecycleGarbage" value="true" />

    <add key="RequiredPhonemeCoveragePercentage" value="23"/>
    <add key="SentenceAcceptanceThreshold" value="50"/>
    <add key="PhraseAcceptanceThreshold" value="50"/>
    <add key="PhonemeAcceptanceThreshold" value="2"/>
    <add key="PhonemeExperienceThreshold" value="2.0"/>
    <add key="PhonemeOccurrenceThreshold" value="8"/>
    <add key="WordConfidenceThresholds" value="0,20,30,40"/>
  </appSettings>

  <spring>
    <context type="Spring.Context.Support.XmlApplicationContext, Spring.Core">
      <resource uri=
        "assembly://GlobalEnglish.Recognition.Services/GlobalEnglish.Recognition.Services/SpringContext.xml" />
    </context>
  </spring>

  <common>
    <logging>
      <factoryAdapter
        type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>
  
  <!-- This section contains the log4net configuration settings -->
  <log4net>

    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="GlobalEnglish" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-5p %c %m%n" />
      </layout>
      <file value="/SiteLogs/RecognitionTest.log"/>
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd" />
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="GlobalEnglish" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-5p %c %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>

  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IContentService" closeTimeout="00:10:00" openTimeout="00:10:00" 
                 receiveTimeout="00:10:00" sendTimeout="00:10:00" maxReceivedMessageSize="500000"  />
      </basicHttpBinding>
    </bindings>

    <client>
      <endpoint address="http://10.1.2.132/ContentService/ContentService.svc" binding="basicHttpBinding" 
                bindingConfiguration="BasicHttpBinding_IContentService" 
                contract="GlobalEnglish.Denali.ContentServiceContract.IContentService" 
                name="BasicHttpBinding_IContentService">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>
